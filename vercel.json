{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "DATABASE_URL": "@supabase_db_url",
    "RESEND_API_KEY": "@resend_api_key",
    "NODE_ENV": "production",
    "JWT_SECRET": "@jwt_secret"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "SUPABASE_URL": "@supabase_url"
    }
  }
}
