# Production Environment Variables
# Copy this to .env and fill in your values

# Security & Environment
NODE_ENV=production
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-chars-long

# Admin Configuration (CHANGE THESE)
ADMIN_EMAIL=admin@divaskloset.com
ADMIN_PASSWORD=change-this-secure-password-in-production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/divas_closet
# For development with SQLite: DATABASE_URL=sqlite://app.db

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@divaskloset.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

